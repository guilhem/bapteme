description "bapteme"
author "Guilhem Lettron <guilhem.lettron@optiflows.com>"

start on runlevel [2345]
stop on starting rc RUNLEVEL=[016]

env ENABLED=0

respawn

pre-start script
	[ -f /etc/default/$UPSTART_JOB ] && . /etc/default/$UPSTART_JOB

	[ "$ENABLED" = "1" ] || { stop; exit 0; }
end script

exec bapteme
